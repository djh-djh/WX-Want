/* component/search/search.wxss */
.In_search {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.In_search .city {
  width: 20%;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 14px;
}
.In_search .city .cityName{
  width: auto;
  max-width: 90%;
  overflow: hidden;
  /* white-space: nowrap;
  text-overflow: ellipsis; */
}
.In_search .search{
  width: 78%;
  height: 60rpx;
  background-color: antiquewhite;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
}
.In_search .search .searchIcon{
  font-size: 32rpx;
  margin: 0 10rpx;
}