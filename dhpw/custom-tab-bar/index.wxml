<!--component/custom-tab-bar/custom-tab-bar.wxml-->
<view class="tab-bar">
	<view class="tab-bar-border"></view>
	<view
	 wx:for="{{list}}"
	 wx:key="index"
	 class="tab-bar-item"
	 data-path="{{item.pagePath}}"
	 data-index="{{index}}"
	 bindtap="switchTab"
	>
		<!-- <cover-image src="{{selected === index ? item.selectedIconPath : item.iconPath}}"></cover-image> -->
		<van-icon name="{{iconName[index]}}" color="{{selected === index ? selectedColor : color}}" size="22px" custom-style="font-weight:600;"/>
		<view class="tab-bar-text" style="color: {{selected === index ? selectedColor : color}}">
			{{item.text}}
		</view>
	</view>
</view>

